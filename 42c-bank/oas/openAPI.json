{
    "openapi": "3.0.3",
    "info": {
        "title": "42C Bank API",
        "description": "An intentionally unsecure banking API for education and training purposes.",
        "contact": {
            "name": "42Crunch Support",
            "url": "https://support.42crunch.com",
            "email": "support@42crunch.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000/apis/banking/v1"
        }
    ],
    "security": [
        {
            "AccessToken": []
        }
    ],
    "x-42c-accept-empty-security": true,
    "paths": {
        "/auth/register": {
            "post": {
                "description": "create an account",
                "operationId": "AccountRegister",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "$ref": "#/components/schemas/Name"
                                    },
                                    "email": {
                                        "$ref": "#/components/schemas/Email"
                                    },
                                    "postalAddress": {
                                        "$ref": "#/components/schemas/Address"
                                    },
                                    "pan": {
                                        "$ref": "#/components/schemas/PersonalAccountNumber"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "$ref": "#/components/schemas/ResponseMessage"
                                        },
                                        "accountId": {
                                            "$ref": "#/components/schemas/AccountId"
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            }
                        }
                    },
                    "default": {
                        "$ref": "#/components/responses/DefaultErrorResponse"
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "description": "Log in to the account",
                "operationId": "AccountLogin",
                "security": [],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "$ref": "#/components/schemas/Email"
                                    },
                                    "pan": {
                                        "$ref": "#/components/schemas/PersonalAccountNumber"
                                    }
                                },
                                "additionalProperties": false
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "access": {
                                            "type": "string",
                                            "pattern": "^/eyJ[A-Za-z0-9-_]+.eyJ[A-Za-z0-9-_]+.[A-Za-z0-9-_.+/]*$",
                                            "maxLength": 500
                                        },
                                        "access_expires": {
                                            "type": "integer"
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            }
                        }
                    },
                    "default": {
                        "$ref": "#/components/responses/DefaultErrorResponse"
                    }
                }
            }
        },
        "/account": {
            "get": {
                "description": "Get a user account",
                "operationId": "GetAccount",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "accountId": {
                                            "$ref": "#/components/schemas/AccountId"
                                        },
                                        "name": {
                                            "$ref": "#/components/schemas/Name"
                                        },
                                        "email": {
                                            "$ref": "#/components/schemas/Email"
                                        },
                                        "address": {
                                            "$ref": "#/components/schemas/Address"
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            }
                        }
                    },
                    "default": {
                        "$ref": "#/components/responses/DefaultErrorResponse"
                    }
                }
            },
            "delete": {
                "description": "Delete an Account",
                "operationId": "DeleteAccount",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/MessageObject"
                                }
                            }
                        }
                    },
                    "default": {
                        "$ref": "#/components/responses/DefaultErrorResponse"
                    }
                }
            }
        },
        "/account/balances": {
            "get": {
                "description": "Get Account balances",
                "operationId": "GetAccountBalances",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "account ID": {
                                            "$ref": "#/components/schemas/AccountId"
                                        },
                                        "balance": {
                                            "$ref": "#/components/schemas/BalanceAmount"
                                        },
                                        "currency": {
                                            "$ref": "#/components/schemas/Currency"
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            }
                        }
                    },
                    "default": {
                        "$ref": "#/components/responses/DefaultErrorResponse"
                    }
                }
            }
        },
        "/account/transactions": {
            "get": {
                "description": "Get Account Transactions",
                "operationId": "GetAccountTransactions",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "payer": {
                                                "$ref": "#/components/schemas/AccountId"
                                            },
                                            "payee": {
                                                "$ref": "#/components/schemas/AccountId"
                                            },
                                            "amount": {
                                                "type": "number"
                                            },
                                            "currency": {
                                                "$ref": "#/components/schemas/Currency"
                                            }
                                        },
                                        "additionalProperties": false
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "$ref": "#/components/responses/DefaultErrorResponse"
                    }
                }
            },
            "head": {
                "description": "Get Account Transactions Headers",
                "operationId": "GetAccountTransactionsHeaders",
                "responses": {
                    "200": {
                        "description": "No content"
                    },
                    "default": {
                        "$ref": "#/components/responses/NoContentErrorResponse"
                    }
                }
            }
        },
        "/account/products/cards": {
            "post": {
                "description": "Apply for a credit card",
                "operationId": "CreateCardApplication",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "delivery": {
                                        "$ref": "#/components/schemas/DeliveryType"
                                    }
                                },
                                "additionalProperties": false
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "$ref": "#/components/schemas/ResponseMessage"
                                        },
                                        "referenceId": {
                                            "type": "number"
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            }
                        },
                        "headers": {
                            "X-Rate-Limit-Limit": {
                                "description": "The number of allowed requests in the current period"
                            }
                        }
                    },
                    "default": {
                        "$ref": "#/components/responses/DefaultErrorResponse"
                    }
                }
            },
            "get": {
                "description": "Get credit card application",
                "operationId": "GetCardApplication",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "_id": {
                                            "type": "number"
                                        },
                                        "name": {
                                            "$ref": "#/components/schemas/Name"
                                        },
                                        "delivery": {
                                            "$ref": "#/components/schemas/DeliveryType"
                                        },
                                        "address": {
                                            "$ref": "#/components/schemas/Address"
                                        },
                                        "status": {
                                            "$ref": "#/components/schemas/CardStatus"
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            }
                        }
                    },
                    "default": {
                        "$ref": "#/components/responses/DefaultErrorResponse"
                    }
                }
            }
        },
        "/account/products/cards/{referenceId}": {
            "put": {
                "description": "Update the delivery method and address",
                "operationId": "UpdateCardApplication",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/referenceId"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "delivery": {
                                        "$ref": "#/components/schemas/DeliveryType"
                                    },
                                    "postalAddress": {
                                        "$ref": "#/components/schemas/Address"
                                    }
                                },
                                "additionalProperties": false
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "_id": {
                                            "type": "number"
                                        },
                                        "name": {
                                            "$ref": "#/components/schemas/Name"
                                        },
                                        "delivery": {
                                            "$ref": "#/components/schemas/DeliveryType"
                                        },
                                        "address": {
                                            "$ref": "#/components/schemas/Address"
                                        },
                                        "status": {
                                            "$ref": "#/components/schemas/CardStatus"
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            }
                        }
                    },
                    "default": {
                        "$ref": "#/components/responses/DefaultErrorResponse"
                    }
                }
            },
            "delete": {
                "description": "Cancel a credit card application",
                "operationId": "DeleteCardApplication",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/referenceId"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "$ref": "#/components/schemas/ResponseMessage"
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            }
                        }
                    },
                    "default": {
                        "$ref": "#/components/responses/DefaultErrorResponse"
                    }
                }
            }
        },
        "/account/payees": {
            "get": {
                "description": "Get list of payees",
                "operationId": "GetAccountPayees",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "maxItems": 10,
                                    "items": {
                                        "oneOf": [
                                            {
                                                "$ref": "#/components/schemas/UtilityPayee"
                                            },
                                            {
                                                "$ref": "#/components/schemas/ContactPayee"
                                            }
                                        ],
                                        "discriminator": {
                                            "propertyName": "payeeType"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "$ref": "#/components/responses/DefaultErrorResponse"
                    }
                }
            },
            "post": {
                "description": "Add new payee",
                "operationId": "CreatePayee",
                "security": [
                    {
                        "APIKey": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "oneOf": [
                                    {
                                        "$ref": "#/components/schemas/UtilityPayee"
                                    },
                                    {
                                        "$ref": "#/components/schemas/ContactPayee"
                                    }
                                ],
                                "discriminator": {
                                    "propertyName": "payeeType"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "properties":{
                                        "message":{
                                            "$ref": "#/components/schemas/ResponseMessage"
                                        },
                                        "payeeId":{
                                            "$ref": "#/components/schemas/AccountId"
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            }
                        }
                    },
                    "default": {
                        "$ref": "#/components/responses/DefaultErrorResponse"
                    }
                }
            }
        },
        "/account/payees/{payeeId}": {
            "delete": {
                "description": "Delete a payee from the payee list",
                "operationId": "DeletePayee",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/payeeId"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/MessageObject"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/401ErrorResponse"
                    }
                }
            }
        },
        "/account/payments": {
            "post": {
                "description": "Create a payment to make a transfer or pay a bill.",
                "operationId": "CreatePayment",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "payeeId": {
                                        "$ref": "#/components/schemas/AccountId"
                                    },
                                    "amount": {
                                        "$ref": "#/components/schemas/TransferAmount"
                                    },
                                    "currency": {
                                        "$ref": "#/components/schemas/Currency"
                                    }
                                },
                                "additionalProperties": false
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "transactionId": {
                                            "$ref": "#/components/schemas/TransactionId"
                                        },
                                        "message": {
                                            "$ref": "#/components/schemas/ResponseMessage"
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            }
                        }
                    },
                    "default": {
                        "$ref": "#/components/responses/DefaultErrorResponse"
                    }
                }
            }
        },
        "/test": {}
    },
    "components": {
        "schemas": {
            "AccountId": {
                "description": "A unique and immutable identifier used to identify the account resource. This identifier has no meaning to the account owner.",
                "type": "string",
                "pattern": "^[a-f\\d]{24}$",
                "example": "661cc8464787094021349548"
            },
            "Address": {
                "type": "object",
                "properties": {
                    "addressLine": {
                        "items": {
                            "type": "string",
                            "minLength": 1,
                            "maxLength": 70,
                            "pattern": "^[A-Za-z0-9_,. ]{1,50}$"
                        },
                        "type": "array",
                        "description": "Information that locates and identifies a specific address, as defined by postal services, that is presented in free format text.",
                        "minItems": 0,
                        "maxItems": 5
                    },
                    "postCode": {
                        "description": "Identifier consisting of a group of letters and/or numbers that is added to a postal address to assist the sorting of mail.",
                        "type": "string",
                        "pattern": "^[A-Za-z0-9]{1,16}$",
                        "minLength": 1,
                        "maxLength": 16
                    },
                    "country": {
                        "description": "Nation with its own government, occupying a particular territory.",
                        "type": "string",
                        "pattern": "^[A-Z]{2,2}$"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "postCode",
                    "country"
                ],
                "example": {
                    "addressLine": [
                        "101 Avenue de Nice",
                        "Cagnes sur mer",
                        "Nice"
                    ],
                    "postCode": "06000",
                    "country": "FR"
                }
            },
            "BalanceAmount": {
                "type": "number",
                "maximum": 1000000
            },
            "CardStatus": {
                "type": "string",
                "enum": [
                    "pending",
                    "cancelled",
                    "complete"
                ]
            },
            "ContactPayee": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/Payee"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "iban": {
                                "type": "string",
                                "pattern": "^[A-Z0-9]{22,24}$"
                            }
                        }
                    }
                ],
                "example": {
                    "payeeType": "contact",
                    "name": "Lisa Laurent",
                    "iban": "IE12BOFI90000112777777"
                }
            },
            "Currency": {
                "description": "a list of supported currencies by currency code",
                "type": "string",
                "enum": [
                    "AUD",
                    "CAD",
                    "EUR",
                    "GBP",
                    "JPY",
                    "IDR",
                    "INR",
                    "MYR",
                    "SGD",
                    "TWD",
                    "USD"
                ]
            },
            "DeliveryType": {
                "type": "string",
                "enum": [
                    "post",
                    "collect"
                ]
            },
            "Email": {
                "type": "string",
                "format": "email-secured",
                "example": "jbernard@email.com",
                "pattern": "^\\w+(?:[\\-.]\\w+)*@[0-9A-Za-z]+(?:[\\-.][0-9A-Za-z]+)*\\.(?:[A-Za-z][0-9A-Za-z]+|[0-9]+[A-Za-z][0-9A-Za-z]*)$",
                "minLength": 6,
                "maxLength": 320,
                "x-42c-format": "o:email-secured"
            },
            "Name": {
                "type": "string",
                "description": "persons name",
                "pattern": "^[A-Za-z0-9. -]{1,50}$",
                "example": "Jean Bernard"
            },
            "Payee": {
                "type": "object",
                "properties": {
                    "payeeType": {
                        "$ref": "#/components/schemas/PayeeType"
                    },
                    "name": {
                        "$ref": "#/components/schemas/Name"
                    }
                },
                "discriminator": {
                    "propertyName": "payeeType"
                }
            },
            "PayeeType": {
                "type": "string",
                "enum": [
                    "utility",
                    "contact"
                ]
            },
            "PersonalAccountNumber": {
                "type": "string",
                "description": "personal account number",
                "example": "33333"
            },
            "ResponseMessage": {
                "type": "string",
                "pattern": "^[A-Za-z0-9\/\\.\"', ]{1,100}$"
            },
            "MessageObject": {
                "type": "object",
                "properties": {
                    "message": {
                        "$ref": "#/components/schemas/ResponseMessage"
                    }
                },
                "additionalProperties": false
            },
            "UtilityAccountId": {
                "type": "string",
                "pattern": "^[A-Z0-9]{8,12}$"
            },
            "UtilityPayee": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/Payee"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "utility": {
                                "$ref": "#/components/schemas/UtilityType"
                            },
                            "accountNumber": {
                                "$ref": "#/components/schemas/UtilityAccountId"
                            }
                        }
                    }
                ],
                "example": {
                    "payeeType": "utility",
                    "name": "Phone Bill",
                    "utility": "mobile",
                    "accountNumber": "BT2221801"
                }
            },
            "UtilityType": {
                "type": "string",
                "enum": [
                    "electric",
                    "gas",
                    "mobile"
                ]
            },
            "TransactionId": {
                "description": "A unique and immutable identifier used to identify a payment transaction.",
                "type": "string",
                "pattern": ".*"
            },
            "TransferAmount": {
                "type": "number",
                "format": "float",
                "minimum": 1.00,
                "maximum": 3000.00,
                "example": 100
            }
        },
        "responses": {
            "401ErrorResponse": {
                "description": "Unauthorized",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/MessageObject"
                        }
                    }
                }
            },
            "DefaultErrorResponse": {
                "description": "Unexpected Error",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/MessageObject"
                        }
                    }
                }
            },
            "NoContentErrorResponse": {
                "description": "No content"
            }
        },
        "parameters": {
            "payeeId": {
                "name": "payeeId",
                "in": "path",
                "required": true,
                "description": "An identifier for a payee",
                "schema": {
                    "$ref": "#/components/schemas/AccountId"
                }
            },
            "referenceId": {
                "name": "referenceId",
                "in": "path",
                "required": true,
                "description": "An identifier for a credit card application",
                "schema": {
                    "type": "integer",
                    "format": "int32",
                    "minimum": 0,
                    "example": 1000
                }
            }
        },
        "securitySchemes": {
            "AccessToken": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            },
            "APIKey": {
                "type": "apiKey",
                "name": "api_key",
                "in": "header"
            }
        }
    }
}
